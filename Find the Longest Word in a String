
function findLongestWord(str) {
  var strSplit= str.split(' ');//split('') without space will result single alphabet,
  var longestWord = 0;
  for (var i = 0; i < strSplit.length; i ++ ){
    if (strSplit[i].length > longestWord){
      longestWord = strSplit[i].length;//array[i] means the element of arrayment
    }
    
  }
 return longestWord; 
}

findLongestWord("The quick brown fox jumped over the lazy dog");
